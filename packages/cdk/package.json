{
  "name": "@health-command-center/cdk",
  "version": "1.0.0",
  "description": "CDK infrastructure for Health Command Center",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "clean": "rimraf cdk.out",
    "predeploy": "pnpm run build && pnpm run layer:install",
    "predeploy:api": "pnpm run layer:install",
    "layer:install": "cd lib/layers/shared && pnpm install",
    "layer:update": "cd lib/layers/shared && pnpm update",
    "layer:clean": "cd lib/layers/shared && rimraf node_modules pnpm-lock.yaml",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "cdk deploy --all",
    "deploy:domain": "cdk deploy DomainStack",
    "deploy:cert": "cdk deploy CloudFrontCertificateStack",
    "deploy:auth": "cdk deploy AuthStack",
    "deploy:api": "pnpm run clean && pnpm run predeploy:api && npx cdk deploy ApiStack",
    "deploy:static": "cdk deploy StaticSiteStack",
    "deploy:cloudfront": "cdk deploy CloudFrontStack",
    "destroy": "cdk destroy --all",
    "diff": "cdk diff"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "aws-cdk": "^2.118.0",
    "tsx": "^4.7.0",
    "typescript": "~5.3.3",
    "esbuild": "~0.21.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.481.0",
    "@aws-sdk/lib-dynamodb": "^3.481.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.481.0",
    "@health-command-center/types": "workspace:*",
    "aws-cdk-lib": "^2.118.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.1"
  }
}
