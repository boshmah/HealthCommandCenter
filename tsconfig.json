{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@health-command-center/types": [
                "packages/types/src"
            ],
            "@health-command-center/types/*": [
                "packages/types/src/*"
            ]
        }
    },
    "references": [
        {
            "path": "./packages/types"
        },
        {
            "path": "./packages/cdk"
        },
        {
            "path": "./tests"
        }
    ],
    "exclude": [
        "node_modules",
        "dist",
        "cdk.out",
        "coverage",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}